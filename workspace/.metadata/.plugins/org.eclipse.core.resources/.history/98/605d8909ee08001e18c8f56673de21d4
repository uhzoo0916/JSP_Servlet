/** info.js
 * 
 */
 
 function sendData(){	
	let f = document.frm;
	
	if(f.name.value ===""){	
		window.alert("이름은 필수 사항 입니다.")
		f.id.focus();
		return false;
	}
	
	if(f.id.value.length<1 || f.id.value.length>5){	
		window.alert("이름은 1자 이상 4자 이하로 넣어주세요")
		f.id.focus();
		return false;
	}
	if(f.pwd.value ===""){	
		window.alert("pwd는 필수 사항 입니다.")
		f.pwd.focus();
		return false;
	}
	
	if(f.pwd.value.length<4 || f.pwd.value.length>8){	
		window.alert("pwd는 4자 이상 8자 이하로 넣어주세요")
		f.pwd.focus();
		return false;
	}
}